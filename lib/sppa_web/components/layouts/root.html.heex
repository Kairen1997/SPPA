<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Sppa" suffix=" Â· Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
    <style>
      * {
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE and Edge */
      }
      *::-webkit-scrollbar {
        display: none; /* Chrome, Safari, Opera */
      }
    </style>
  </head>
  <body class={[
    "min-h-screen",
    if(assigns[:hide_root_header], do: "", else: "bg-cover bg-center bg-no-repeat bg-fixed")
  ]} style={if(assigns[:hide_root_header], do: "", else: "background-image: url(" <> ~p"/images/Menara Kinabalu.jpg" <> ")")}>
    <%= unless assigns[:hide_root_header] do %>
      <header class="w-full relative z-10 flex items-center justify-between px-4 sm:px-6 lg:px-8 py-4">

        <%!-- Right side: Navigation links, theme toggle, and auth links --%>
        <div class="flex items-center gap-4">
          <%= if @current_scope do %>
            <span class="text-sm text-gray-700 dark:text-gray-300">{@current_scope.user.email}</span>
            <.link href={~p"/users/settings"} class="text-sm text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100">Settings</.link>
            <.link href={~p"/users/log-out"} method="delete" class="text-sm text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100">Log out</.link>
          <% else %>
            <Layouts.theme_toggle />
            <.link href={~p"/users/log-in"} class="text-sm text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100">Log in</.link>
          <% end %>
        </div>
      </header>
    <% end %>
    {@inner_content}
  </body>
</html>
