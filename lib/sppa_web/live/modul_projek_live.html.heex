                      <div class="flex items-center gap-2 mb-3">
                        <span class={[
                          "inline-flex items-center px-2 py-0.5 rounded text-xs font-medium border",
                          case task.priority do
                            "high" -> "bg-red-100 text-red-800 border-red-200"
                            "medium" -> "bg-yellow-100 text-yellow-800 border-yellow-200"
                            "low" -> "bg-green-100 text-green-800 border-green-200"
                            _ -> "bg-gray-100 text-gray-800 border-gray-200"
                          end
                        ]}>
                          {case task.priority do
                            "high" -> "Tinggi"
                            "medium" -> "Sederhana"
                            "low" -> "Rendah"
                            _ -> "Sederhana"
                          end}
                        </span>
                      </div>
                      
                      <div class="flex items-center justify-between">
                        <div class="flex items-center gap-2">
                          <%= if task.developer_name do %>
                            <div class="flex items-center gap-1.5">
                              <.icon name="hero-user" class="w-3.5 h-3.5 text-gray-400" />
                              <span class="text-xs text-gray-600">{task.developer_name}</span>
                            </div>
                          <% else %>
                            <span class="text-xs text-gray-400">Tiada pembangun</span>
                          <% end %>
                        </div>
                        <%= if task.due_date do %>
                          <div class="flex items-center gap-1">
                            <.icon name="hero-calendar" class="w-3.5 h-3.5 text-gray-400" />
                            <span class="text-xs text-gray-500">
                              {Calendar.strftime(task.due_date, "%d/%m/%Y")}
                            </span>
                          </div>
                        <% end %>
                      </div>
                      
                      <div class="mt-3 pt-3 border-t border-gray-100">
                        <select
                          phx-change="update_task_status"
                          phx-value-task_id={task.id}
                          name="status"
                          class="w-full text-xs border-gray-200 rounded-md focus:ring-blue-500 focus:border-blue-500"
                          onclick="event.stopPropagation();"
                        >
                          <option value="todo" selected={task.status == "todo"}>Belum Bermula</option>
                          <option value="in_progress" selected={task.status == "in_progress"}>Sedang Dijalankan</option>
                          <option value="review" selected={task.status == "review"}>Semakan</option>
                          <option value="done" selected={task.status == "done"}>Selesai</option>
                        </select>
                      </div>
                    </div>
                  <% end %>
                  
                  <%= if Enum.empty?(Enum.filter(@tasks, fn t -> t.status == "review" end)) do %>
                    <div class="text-center py-8 text-gray-400">
                      <p class="text-sm">Tiada tugasan</p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            
            <%!-- Done Column --%>
            <div class="flex-shrink-0 w-80">
              <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div class="px-4 py-3 bg-green-50 border-b border-gray-200">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2">
                      <div class="w-3 h-3 rounded-full bg-green-500"></div>
                      <h3 class="text-sm font-semibold text-gray-700">Selesai</h3>
                    </div>
                    <span class="text-xs font-medium text-gray-500 bg-green-200 px-2 py-0.5 rounded-full">
                      {length(Enum.filter(@tasks, fn t -> t.status == "done" end))}
                    </span>
                  </div>
                </div>
                <div class="p-3 space-y-3 min-h-[400px] max-h-[calc(100vh-300px)] overflow-y-auto">
                  <%= for task <- Enum.filter(@tasks, fn t -> t.status == "done" end) do %>
                    <div
                      class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-all duration-200 cursor-pointer group opacity-75"
                      phx-click="open_edit_task_modal"
                      phx-value-task_id={task.id}
                    >
                      <div class="flex items-start justify-between mb-2">
                        <h4 class="text-sm font-semibold text-gray-900 flex-1 pr-2 line-through">
                          {task.title}
                        </h4>
                        <button
                          phx-click="delete_task"
                          phx-value-task_id={task.id}
                          class="opacity-0 group-hover:opacity-100 text-gray-400 hover:text-red-500 transition-opacity"
                          onclick="event.stopPropagation();"
                        >
                          <.icon name="hero-trash" class="w-4 h-4" />
                        </button>
                      </div>
                      
                      <%= if task.description do %>
                        <p class="text-xs text-gray-600 mb-3 line-clamp-2">
                          {task.description}
                        </p>
