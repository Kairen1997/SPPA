                      name="status_filter"
                      value={@status_filter}
                      class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-white text-black"
                    >
                      <option value="">Semua Status</option>
                      
                      <option value="Dalam Pembangunan">Dalam Pembangunan</option>
                      
                      <option value="Selesai">Selesai</option>
                    </select>
                  </div>
                   <%!-- Fasa Filter --%>
                  <div>
                    <label for="fasa_filter" class="block text-sm font-medium text-black mb-2">
                      Fasa
                    </label>
                    <select
                      id="fasa_filter"
                      name="fasa_filter"
                      value={@fasa_filter}
                      class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-white text-black"
                    >
                      <option value="">Semua Fasa</option>
                      
                      <option value="Analisis dan Rekabentuk">Analisis dan Rekabentuk</option>
                      
                      <option value="Soal Selidik">Soal Selidik</option>
                      
                      <option value="Jadual Projek">Jadual Projek</option>
                      
                      <option value="Pengaturcaraan">Pengaturcaraan</option>
                      
                      <option value="Pengurusan Perubahan">Pengurusan Perubahan</option>
                      
                      <option value="UAT">UAT</option>
                      
                      <option value="Ujian Keselamatan">Ujian Keselamatan</option>
                      
                      <option value="Penempatan">Penempatan</option>
                      
                      <option value="Penyerahan">Penyerahan</option>
                      
                      <option value="Maklumbalas Pelanggan">Maklumbalas Pelanggan</option>
                    </select>
                  </div>
                </div>
                 <%!-- Clear Filters Button --%>
                <%= if @search_term != "" || @status_filter != "" || @fasa_filter != "" do %>
                  <div class="flex items-center justify-end pt-2">
                    <button
                      type="button"
                      phx-click="clear_filters"
                      class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors duration-200"
                    >
                      <.icon name="hero-x-mark" class="w-4 h-4" /> <span>Bersihkan Penapis</span>
                    </button>
                  </div>
                <% end %>
              </.form>
            </div>
             <%!-- Projects Table --%>
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
              <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <.icon name="hero-folder" class="w-5 h-5 text-gray-600" />
                    <h2 class="text-xl font-semibold text-gray-900">Semua Projek</h2>
                  </div>
                </div>
              </div>
              
              <div class="overflow-x-auto">
                <table
                  class="w-full divide-y divide-gray-200 table-fixed"
                  style="table-layout: fixed;"
                >
                  <thead class="bg-gray-50">
                    <tr>
                      <th
                        class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider"
                        style="width: 15%;"
                      >
                        Nama Projek
                      </th>
                      
                      <th
                        class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider"
                        style="width: 10%;"
                      >
                        Status
                      </th>
                      
                      <th
                        class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider"
                        style="width: 11%;"
                      >
                        Jabatan
                      </th>
                      
                      <th
                        class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider"
                        style="width: 10%;"
                      >
                        Fasa
                      </th>
                      
                      <th
                        class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider"
                        style="width: 8%;"
                      >
                        Tarikh Mula
                      </th>
                      
                      <th
                        class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider"
                        style="width: 8%;"
                      >
                        Tarikh Jangka Siap
                      </th>
                      
                      <th
                        class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider"
                        style="width: 10%;"
                      >
                        Pengurus
                      </th>
                      
                      <th
                        class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider"
                        style="width: 10%;"
                      >
                        Pembangun Sistem
                      </th>
                      
                      <th
                        class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider"
                        style="width: 8%;"
                      >
                        Dokumen
                      </th>
                      
                      <th
                        class="px-2 py-2 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider"
                        style="width: 10%;"
                      >
                        Tindakan
                      </th>
                    </tr>
                  </thead>
                  
                  <tbody class="bg-white divide-y divide-gray-200">
                    <%= if Enum.empty?(@projects) do %>
                      <tr>
                        <td colspan="10" class="px-6 py-12 text-center">
                          <div class="flex flex-col items-center justify-center">
                            <.icon name="hero-inbox" class="w-12 h-12 text-gray-400 mb-3" />
                            <p class="text-gray-500 font-medium">Tiada projek ditemui</p>
                          </div>
                        </td>
                      </tr>
                    <% else %>
                      <%= for project <- @projects do %>
                        <tr class="hover:bg-gray-50 transition-colors duration-150">
                          <td class="px-2 py-2">
                            <div class="flex items-center min-w-0">
                              <div class="flex-shrink-0 h-6 w-6 bg-gradient-to-br from-blue-500 to-blue-600 rounded flex items-center justify-center mr-1.5">
                                <.icon name="hero-folder" class="w-3 h-3 text-white" />
                              </div>
                              
                              <div
                                class="text-xs font-medium text-gray-900 truncate"
                                title={project.nama}
                              >
                                {project.nama}
                              </div>
                            </div>
                          </td>
                          
                          <td class="px-2 py-2">
                            <span
                              class={[
                                "inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium whitespace-nowrap",
                                case project.status do
                                  "Selesai" ->
                                    "bg-green-100 text-green-800"

                                  "Dalam Pembangunan" ->
                                    "bg-blue-100 text-blue-800"

                                  _ ->
                                    "bg-gray-100 text-gray-800"
                                end
                              ]}
                              title={project.status}
                            >
                              {project.status}
                            </span>
                          </td>
                          
                          <td class="px-2 py-2">
                            <div class="flex items-center text-xs text-gray-600 min-w-0">
                              <.icon
                                name="hero-building-office"
                                class="w-3 h-3 text-gray-400 mr-1 flex-shrink-0"
                              />
                              <span
                                class="truncate"
                                title={project.jabatan || "Tiada jabatan"}
                              >
                                {project.jabatan || "-"}
                              </span>
                            </div>
                          </td>
                          
                          <td class="px-2 py-2">
                            <div
                              class="text-xs text-gray-600 truncate"
                              title={project.fasa}
                            >
                              {project.fasa}
                            </div>
                          </td>
                          
                          <td class="px-2 py-2 whitespace-nowrap">
                            <%= if project.tarikh_mula do %>
                              <div class="flex items-center text-xs text-gray-600">
                                <.icon
                                  name="hero-calendar"
                                  class="w-3 h-3 text-gray-400 mr-1 flex-shrink-0"
                                />
                                <span>{Calendar.strftime(project.tarikh_mula, "%d/%m/%Y")}</span>
                              </div>
                            <% else %>
                              <span class="text-xs text-gray-400 italic">-</span>
                            <% end %>
                          </td>
                          
                          <td class="px-2 py-2 whitespace-nowrap">
                            <%= if project.tarikh_siap do %>
                              <div class="flex items-center text-xs text-gray-600">
                                <.icon
                                  name="hero-calendar"
                                  class="w-3 h-3 text-gray-400 mr-1 flex-shrink-0"
                                />
                                <span>{Calendar.strftime(project.tarikh_siap, "%d/%m/%Y")}</span>
                              </div>
                            <% else %>
                              <span class="text-xs text-gray-400 italic">-</span>
                            <% end %>
                          </td>
                          
                          <td class="px-2 py-2">
                            <div class="flex items-center text-xs text-gray-600 min-w-0">
                              <.icon
                                name="hero-user"
                                class="w-3 h-3 text-gray-400 mr-1 flex-shrink-0"
                              />
                              <span
                                class="truncate"
                                title={project.pengurus_projek}
                              >
                                {project.pengurus_projek}
                              </span>
                            </div>
                          </td>
                          
                          <td class="px-2 py-2">
                            <div class="flex items-center text-xs text-gray-600 min-w-0">
                              <.icon
                                name="hero-code-bracket"
                                class="w-3 h-3 text-gray-400 mr-1 flex-shrink-0"
                              />
                              <span
                                class="truncate"
                                title={project.pembangun_sistem || "Tiada pembangun"}
                              >
                                {project.pembangun_sistem || "Tiada pembangun"}
                              </span>
                            </div>
                          </td>
                          
                          <td class="px-2 py-2">
                            <div class="flex items-center text-xs text-gray-600 min-w-0">
                              <.icon
                                name="hero-document"
                                class="w-3 h-3 text-gray-400 mr-1 flex-shrink-0"
                              />
                              <span class="truncate">
                                <%= if project.dokumen_sokongan && project.dokumen_sokongan > 0 do %>
                                  {project.dokumen_sokongan}
                                <% else %>
                                  <span class="text-gray-400 italic">-</span>
                                <% end %>
                              </span>
                            </div>
                          </td>
                          
                          <td class="px-2 py-2 whitespace-nowrap">
                            <.link
                              navigate={~p"/projek/#{project.id}/soal-selidik"}
                              class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-blue-700 bg-blue-50 hover:bg-blue-100 rounded transition-colors duration-200"
                            >
                              <.icon name="hero-eye" class="w-3.5 h-3.5" /> <span>Lihat</span>
                            </.link>
                          </td>
                        </tr>
                      <% end %>
                    <% end %>
                  </tbody>
                </table>
              </div>
               <%!-- Pagination --%>
              <%= if @total_pages > 0 do %>
                <div class="px-6 py-4 border-t border-gray-200 bg-gradient-to-r from-gray-50 to-white">
                  <div class="flex items-center justify-between">
                    <div class="text-sm text-gray-600">
                      Menunjukkan
                      <span class="font-medium text-gray-900">{(@page - 1) * @per_page + 1}</span>
                      hingga
                      <span class="font-medium text-gray-900">
                        {min(@page * @per_page, @total_count)}
                      </span>
                      daripada <span class="font-medium text-gray-900">{@total_count}</span>
                      projek
                    </div>
                    
                    <div class="flex items-center gap-2">
                      <button
                        phx-click="change_page"
                        phx-value-page={@page - 1}
                        disabled={@page == 1}
                        class={[
                          "px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200",
                          if(@page == 1,
                            do: "text-gray-400 bg-gray-100 cursor-not-allowed",
                            else:
                              "text-gray-700 bg-white hover:bg-gray-100 border border-gray-300 hover:border-gray-400"
                          )
                        ]}
                      >
                        <.icon name="hero-chevron-left" class="w-4 h-4" />
                      </button>
                      <%= for page_num <- max(1, @page - 2)..min(@total_pages, @page + 2) do %>
                        <button
                          phx-click="change_page"
                          phx-value-page={page_num}
                          class={[
                            "px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200",
                            if(page_num == @page,
                              do: "text-white bg-blue-600 hover:bg-blue-700 shadow-md",
                              else:
                                "text-gray-700 bg-white hover:bg-gray-100 border border-gray-300 hover:border-gray-400"
                            )
                          ]}
                        >
                          {page_num}
                        </button>
                      <% end %>
                      
                      <button
                        phx-click="change_page"
                        phx-value-page={@page + 1}
                        disabled={@page == @total_pages}
                        class={[
                          "px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200",
                          if(@page == @total_pages,
                            do: "text-gray-400 bg-gray-100 cursor-not-allowed",
                            else:
                              "text-gray-700 bg-white hover:bg-gray-100 border border-gray-300 hover:border-gray-400"
                          )
                        ]}
                      >
                        <.icon name="hero-chevron-right" class="w-4 h-4" />
                      </button>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </main>
    </div>
  </div>
</Layouts.app>
