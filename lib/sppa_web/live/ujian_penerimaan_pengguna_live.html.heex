<Layouts.app flash={@flash} current_scope={@current_scope} full_width={true}>
  <div class="fixed inset-0 flex h-screen bg-gradient-to-br from-gray-50 to-gray-100 z-50">
    <%!-- Overlay --%>
    <div
      class={[
        "fixed inset-0 bg-blue-900/60 z-40 transition-opacity duration-300",
        if(@sidebar_open, do: "opacity-100", else: "opacity-0 pointer-events-none")
      ]}
      phx-click="close_sidebar"
    >
    </div>
    <%!-- Sidebar --%>
    <.dashboard_sidebar
      sidebar_open={@sidebar_open}
      dashboard_path={~p"/dashboard"}
      logo_src={~p"/images/logojpkn.png"}
      current_scope={@current_scope}
      current_path="/ujian-penerimaan-pengguna"
    /> <%!-- Main Content --%>
    <div class="flex-1 flex flex-col overflow-hidden">
      <%!-- Header --%>
      <header class="bg-gradient-to-r from-blue-700 via-blue-600 to-blue-700 border-b border-blue-800/50 px-3 sm:px-6 py-3 sm:py-4 flex items-center shadow-xl relative gap-2 sm:gap-4">
        <div
          class="flex items-center gap-2 sm:gap-4 flex-shrink-0"
          style="max-width: min(30%, 200px);"
        >
          <button
            phx-click="toggle_sidebar"
            class="text-white hover:text-blue-100 hover:bg-blue-500/40 p-1.5 sm:p-2 rounded-lg transition-all duration-200 flex-shrink-0"
          >
            <.icon name="hero-bars-3" class="w-5 h-5 sm:w-6 sm:h-6" />
          </button>
           <.header_logos />
        </div>

        <div class="flex-1 flex justify-center min-w-0"><.system_title /></div>

        <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
          <.header_actions
            notifications_open={@notifications_open}
            notifications_count={@notifications_count}
            activities={@activities}
            profile_menu_open={@profile_menu_open}
            current_scope={@current_scope}
          />
        </div>
      </header>
      <%!-- Main Content Area --%>
      <main class="flex-1 overflow-y-auto bg-gradient-to-br from-gray-50 to-gray-100">
        <div class="max-w-7xl mx-auto px-6 py-8">
          <%= if assigns[:selected_ujian] do %>
            <%!-- Show Page - Detail Ujian --%>
            <div class="mb-6">
              <div class="flex items-center gap-4 mb-4 flex-wrap">
                <.link
                  navigate={
                    if @project_id,
                      do: ~p"/ujian-penerimaan-pengguna?#{[project_id: @project_id]}",
                      else: ~p"/ujian-penerimaan-pengguna"
                  }
                  class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors duration-200"
                >
                  <.icon name="hero-arrow-left" class="w-4 h-4" />
                  <span>Kembali ke Senarai Ujian</span>
                </.link>
              </div>

              <h1 class="text-3xl font-bold text-gray-900 mb-2">{@selected_ujian.tajuk}</h1>

              <p class="text-gray-600">Butiran lengkap ujian penerimaan pengguna</p>
            </div>
            <%!-- Maklumat Ujian Table --%>
            <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
              <div class="px-6 py-4 bg-gradient-to-r from-blue-600 to-blue-700 border-b border-blue-800 flex items-center justify-between">
                <h2 class="text-xl font-semibold text-white">Maklumat Ujian</h2>

                <button
                  phx-click="open_add_kes_modal"
                  class="flex items-center gap-2 px-4 py-2 bg-white/20 hover:bg-white/30 text-white rounded-lg transition-all duration-200 font-medium text-sm"
                >
                  <.icon name="hero-plus-circle" class="w-5 h-5" /> <span>Tambah Kes Ujian</span>
                </button>
              </div>

              <div class="overflow-x-auto">
                <table class="w-full text-sm table-auto leading-tight">
                  <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                      <th class="px-3 py-1.5 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider w-32">
                        ID Kes Ujian
                      </th>

                      <th class="px-3 py-1.5 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider min-w-[160px]">
                        Senario Ujian
                      </th>

                      <th class="px-3 py-1.5 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider min-w-[120px]">
                        Langkah Ujian
                      </th>

                      <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider w-36">
                        Keputusan Dijangka
                      </th>

                      <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider w-36">
                        Keputusan Sebenar
                      </th>

                      <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider w-32">
                        Hasil
                      </th>

                      <th class="px-3 py-1.5 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider min-w-[100px]">
                        Di Uji Oleh
                      </th>

                      <th class="px-3 py-1.5 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider w-32">
                        Tarikh Ujian
                      </th>

                      <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider w-28">
                        Disahkan Oleh
                      </th>

                      <th class="px-3 py-1.5 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider w-36">
                        Tarikh Pengesahan
                      </th>

                      <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider w-28">
                        Tindakan
                      </th>
                    </tr>
                  </thead>

                  <tbody class="bg-white divide-y divide-gray-200">
                    <%= if length(Map.get(@selected_ujian, :senarai_kes_ujian, [])) == 0 do %>
                      <tr>
                        <td colspan="11" class="px-6 py-12 text-center">
                          <div class="flex flex-col items-center justify-center text-gray-400">
                            <.icon name="hero-inbox" class="w-12 h-12 mb-3" />
                            <p class="text-sm font-medium">Tiada kes ujian</p>
                          </div>
                        </td>
                      </tr>
                    <% else %>
                      <tr
                        :for={kes <- Map.get(@selected_ujian, :senarai_kes_ujian, [])}
                        class="hover:bg-gray-50 transition-colors duration-150"
                      >
                        <td class="px-3 py-1.5">
                          <span class="text-gray-900 font-mono text-xs">
                            {Map.get(kes, :kod, kes.id)}
                          </span>
                        </td>

                        <td class="px-3 py-1.5 align-top">
                          <% senario_lines =
                            (kes.senario || "")
                            |> String.split(~r/\r?\n/)
                            |> Enum.map(&String.trim/1)
                            |> Enum.reject(&(&1 == "")) %>
                          <%= if senario_lines == [] do %>
                            <span class="text-gray-400 text-xs">—</span>
                          <% else %>
                            <div class="text-gray-900 text-xs font-semibold">
                              <%= for line <- senario_lines do %>
                                <div class="py-0.5">{line}</div>
                              <% end %>
                            </div>
                          <% end %>
                        </td>

                        <td class="px-3 py-1.5 align-top">
                          <% langkah_lines =
                            (kes.langkah || "")
                            |> String.split(~r/\r?\n/)
                            |> Enum.map(&String.trim/1)
                            |> Enum.reject(&(&1 == "")) %>
                          <%= if langkah_lines == [] do %>
                            <span class="text-gray-400 text-xs">—</span>
                          <% else %>
                            <div class="text-gray-900 text-xs">
                              <%= for line <- langkah_lines do %>
                                <div class="py-0.5">{line}</div>
                              <% end %>
                            </div>
                          <% end %>
                        </td>

                        <td class="px-3 py-1.5 align-top">
                          <% dijangka_lines =
                            (kes.keputusan_dijangka || "")
                            |> String.split(~r/\r?\n/)
                            |> Enum.map(&String.trim/1)
                            |> Enum.reject(&(&1 == "")) %>
                          <%= if dijangka_lines == [] do %>
                            <span class="text-gray-400 text-xs">—</span>
                          <% else %>
                            <div class="text-gray-900 text-xs">
                              <%= for line <- dijangka_lines do %>
                                <div class="py-0.5">{line}</div>
                              <% end %>
                            </div>
                          <% end %>
                        </td>

                        <td class="px-3 py-1.5 align-top">
                          <% sebenar_str = (kes.keputusan_sebenar || "") |> to_string() %> <% sebenar_lines =
                            sebenar_str
                            |> String.split(~r/\r?\n/)
                            |> Enum.map(&String.trim/1)
                            |> Enum.reject(&(&1 == "")) %>
                          <%= if sebenar_lines != [] do %>
                            <div class="text-gray-900 text-xs">
                              <%= for line <- sebenar_lines do %>
                                <div class="py-0.5">{line}</div>
                              <% end %>
                            </div>
                          <% end %>
                        </td>

                        <td class="px-3 py-1.5 text-center align-top">
                          <%= if kes.hasil do %>
                            <span class={[
                              "inline-flex items-center px-2 py-1 rounded-full text-xs font-medium border",
                              case kes.hasil do
                                "Lulus" -> "bg-green-100 text-green-800 border-green-200"
                                "Gagal" -> "bg-red-100 text-red-800 border-red-200"
                                _ -> "bg-gray-100 text-gray-800 border-gray-200"
                              end
                            ]}>
                              <.icon
                                name={
                                  case kes.hasil do
                                    "Lulus" -> "hero-check-circle"
                                    "Gagal" -> "hero-x-circle"
                                    _ -> "hero-information-circle"
                                  end
                                }
                                class="w-3 h-3 mr-1"
                              /> {kes.hasil}
                            </span>
                          <% end %>
                        </td>

                        <td class="px-3 py-1.5">
                          <span class="text-gray-900 text-xs">{Map.get(kes, :penguji, "")}</span>
                        </td>

                        <td class="px-3 py-1.5">
                          <%= if Map.get(kes, :tarikh_ujian) do %>
                            <div class="flex items-center gap-1.5">
                              <.icon
                                name="hero-calendar-days"
                                class="w-3.5 h-3.5 text-gray-400 flex-shrink-0"
                              />
                              <span class="text-gray-900 text-xs">
                                {Calendar.strftime(kes.tarikh_ujian, "%d/%m/%Y")}
                              </span>
                            </div>
                          <% end %>
                        </td>

                        <td class="px-3 py-1.5 text-center">
                          <% name =
                            Map.get(kes, :disahkan_oleh) ||
                              if Map.get(kes, :disahkan), do: "Ya", else: nil %>
                          <%= if name && (name |> to_string() |> String.trim()) not in ["", "-"] do %>
                            <span class="text-xs text-gray-900">{name}</span>
                          <% end %>
                        </td>

                        <td class="px-3 py-1.5">
                          <% t = Map.get(kes, :tarikh_pengesahan) %>
                          <%= if t && t != "-" && t != "" do %>
                            <div class="flex items-center gap-1.5">
                              <.icon
                                name="hero-calendar-days"
                                class="w-3.5 h-3.5 text-gray-400 flex-shrink-0"
                              />
                              <span class="text-gray-900 text-xs">
                                {Calendar.strftime(kes.tarikh_pengesahan, "%d/%m/%Y")}
                              </span>
                            </div>
                          <% end %>
                        </td>

                        <td class="px-3 py-1.5 text-center">
                          <div class="flex items-center justify-center gap-1.5">
                            <button
                              phx-click="edit_kes_ujian"
                              phx-value-kes_id={kes.id}
                              class="p-1.5 text-green-600 hover:text-green-800 hover:bg-green-50 rounded-md transition-colors duration-200"
                              title="Edit"
                            >
                              <.icon name="hero-pencil" class="w-4 h-4" />
                            </button>
                            <button
                              phx-click="delete_kes_ujian"
                              phx-value-kes_id={kes.id}
                              data-confirm="Padam kes ujian ini?"
                              class="p-1.5 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-md transition-colors duration-200"
                              title="Padam"
                            >
                              <.icon name="hero-trash" class="w-4 h-4" />
                            </button>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          <% else %>
            <%!-- Index Page - List Ujian --%>
            <div class="mb-8">
              <div class="flex items-center gap-4 flex-wrap">
                <div>
                  <h1 class="text-4xl font-bold text-gray-900 mb-2">Ujian Penerimaan Pengguna</h1>

                  <p class="text-gray-600">
                    Urus dan pantau ujian penerimaan pengguna untuk modul sistem
                  </p>
                </div>
              </div>
            </div>
            <%!-- Ujian Container --%>
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="px-6 py-4 bg-gradient-to-r from-blue-600 to-blue-700 border-b border-blue-800">
                <h2 class="text-xl font-semibold text-white">
                  Senarai Ujian Penerimaan Pengguna
                </h2>
              </div>

              <%= if @ujian_total == 0 do %>
                <div class="px-6 py-12 text-center">
                  <div class="flex flex-col items-center justify-center text-gray-400">
                    <.icon name="hero-inbox" class="w-12 h-12 mb-3" />
                    <p class="text-sm font-medium">Tiada ujian penerimaan pengguna</p>

                    <p class="text-xs mt-1">Tiada ujian untuk dipaparkan</p>
                  </div>
                </div>
              <% else %>
                <%!-- Table View --%>
                <div class="overflow-x-auto">
                  <table class="w-full text-sm leading-tight">
                    <thead class="bg-gray-50 border-b border-gray-200">
                      <tr>
                        <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider w-12">
                          Bil
                        </th>

                        <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">
                          Nama Modul
                        </th>

                        <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">
                          Status
                        </th>

                        <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">
                          Tarikh Ujian
                        </th>

                        <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">
                          Di Uji Oleh
                        </th>

                        <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">
                          Hasil
                        </th>

                        <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider min-w-[140px]">
                          Catatan
                        </th>

                        <th class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">
                          Tindakan
                        </th>
                      </tr>
                    </thead>

                    <tbody class="bg-white divide-y divide-gray-200">
                      <tr
                        :for={{ujian, idx} <- Enum.with_index(@paginated_ujian, 0)}
                        class="hover:bg-gray-50 transition-colors duration-150 h-12"
                      >
                        <td class="px-3 py-1.5 text-center text-xs font-semibold text-gray-700 align-middle">
                          {@per_page * (@page - 1) + idx + 1}
                        </td>

                        <td class="px-3 py-1.5 text-left align-middle">
                          <span class="text-xs text-gray-700">{ujian.modul}</span>
                        </td>

                        <td class="px-3 py-1.5 whitespace-nowrap text-left align-middle">
                          <span class={[
                            "inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium border",
                            case ujian.status do
                              "Menunggu" -> "bg-gray-100 text-gray-800 border-gray-200"
                              "Dalam Proses" -> "bg-yellow-100 text-yellow-800 border-yellow-200"
                              "Selesai" -> "bg-green-100 text-green-800 border-green-200"
                              "Dibatalkan" -> "bg-red-100 text-red-800 border-red-200"
                              _ -> "bg-gray-100 text-gray-800 border-gray-200"
                            end
                          ]}>
                            <.icon
                              name={
                                case ujian.status do
                                  "Menunggu" -> "hero-clock"
                                  "Dalam Proses" -> "hero-arrow-path"
                                  "Selesai" -> "hero-check-circle"
                                  "Dibatalkan" -> "hero-x-circle"
                                  _ -> "hero-information-circle"
                                end
                              }
                              class="w-3 h-3 mr-1"
                            /> {ujian.status}
                          </span>
                        </td>
                        <% data_dimasukkan =
                          ujian.penguji && String.trim(to_string(ujian.penguji || "")) != "" %>
                        <td class="px-3 py-1.5 whitespace-nowrap text-left align-middle">
                          <%= if data_dimasukkan && ujian.tarikh_ujian do %>
                            <div class="flex items-center gap-1.5">
                              <.icon name="hero-calendar-days" class="w-3.5 h-3.5 text-gray-400" />
                              <span class="text-xs text-gray-700">
                                {Calendar.strftime(ujian.tarikh_ujian, "%d/%m/%Y")}
                              </span>
                            </div>
                          <% end %>
                        </td>

                        <td class="px-3 py-1.5 text-left align-middle">
                          <span class="text-xs text-gray-700">
                            {if data_dimasukkan, do: ujian.penguji || "", else: ""}
                          </span>
                        </td>

                        <td class="px-3 py-1.5 whitespace-nowrap text-left align-middle">
                          <%= if data_dimasukkan && ujian.hasil && ujian.hasil not in [nil, "", "Belum Selesai"] do %>
                            <span class={[
                              "inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium border",
                              case ujian.hasil do
                                "Lulus" -> "bg-green-100 text-green-800 border-green-200"
                                "Gagal" -> "bg-red-100 text-red-800 border-red-200"
                                _ -> "bg-gray-100 text-gray-800 border-gray-200"
                              end
                            ]}>
                              <.icon
                                name={
                                  case ujian.hasil do
                                    "Lulus" -> "hero-check-circle"
                                    "Gagal" -> "hero-x-circle"
                                    _ -> "hero-information-circle"
                                  end
                                }
                                class="w-3 h-3 mr-1"
                              /> {ujian.hasil}
                            </span>
                          <% end %>
                        </td>

                        <td class="px-3 py-1.5 text-left align-middle h-12">
                          <div class="text-xs text-gray-700 text-left leading-tight line-clamp-2 max-w-[140px]">
                            <%= if data_dimasukkan do %>
                              <%= if (c = Map.get(ujian, :catatan)) && String.trim(to_string(c || "")) != "" do %>
                                {c}
                              <% end %>
                            <% end %>
                          </div>
                        </td>

                        <td class="px-3 py-1.5 whitespace-nowrap text-left align-middle">
                          <div class="flex items-center gap-1.5">
                            <.link
                              navigate={
                                if @project_id,
                                  do:
                                    ~p"/ujian-penerimaan-pengguna/#{ujian.id}?#{[project_id: @project_id]}",
                                  else: ~p"/ujian-penerimaan-pengguna/#{ujian.id}"
                              }
                              class="p-1.5 text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-md transition-colors duration-200"
                              title="Lihat"
                            >
                              <.icon name="hero-eye" class="w-4 h-4" />
                            </.link>
                            <button
                              type="button"
                              phx-click="open_edit_modal"
                              phx-value-ujian_id={ujian.id}
                              class="p-1.5 text-green-600 hover:text-green-800 hover:bg-green-50 rounded-md transition-colors duration-200"
                              title="Edit"
                            >
                              <.icon name="hero-pencil" class="w-4 h-4" />
                            </button>
                          </div>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <%!-- Pagination --%>
                <div class="border-t border-gray-200 px-6 py-4 flex items-center justify-between bg-gray-50">
                  <div class="text-sm text-gray-600">
                    <%= if @ujian_total > 0 do %>
                      <span>
                        Menunjukkan {@per_page * (@page - 1) + 1} - {Enum.min([
                          @page * @per_page,
                          @ujian_total
                        ])} daripada {@ujian_total} ujian
                      </span>
                    <% else %>
                      <span>Tiada ujian untuk dipaparkan</span>
                    <% end %>
                  </div>

                  <div class="flex items-center gap-1">
                    <button
                      type="button"
                      phx-click="prev_page"
                      class={[
                        "inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-xs font-medium bg-white text-gray-700 hover:bg-gray-100 transition-colors duration-150",
                        if(@page == 1, do: "opacity-60 cursor-not-allowed", else: "")
                      ]}
                      disabled={@page == 1}
                    >
                      <.icon name="hero-chevron-left" class="w-3 h-3 mr-1" /> Sebelumnya
                    </button>
                    <div class="flex items-center gap-1">
                      <button
                        :for={p <- 1..@total_pages}
                        type="button"
                        phx-click="go_to_page"
                        phx-value-page={p}
                        class={[
                          "min-w-[32px] px-2 py-1.5 border text-xs font-medium rounded-md transition-colors duration-150",
                          if(p == @page,
                            do: "bg-blue-600 text-white border-blue-600",
                            else: "bg-white text-gray-700 border-gray-300 hover:bg-gray-100"
                          )
                        ]}
                      >
                        {p}
                      </button>
                    </div>

                    <button
                      type="button"
                      phx-click="next_page"
                      class={[
                        "inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-xs font-medium bg-white text-gray-700 hover:bg-gray-100 transition-colors duration-150",
                        if(@page == @total_pages or @ujian_total == 0,
                          do: "opacity-60 cursor-not-allowed",
                          else: ""
                        )
                      ]}
                      disabled={@page == @total_pages or @ujian_total == 0}
                    >
                      Seterusnya <.icon name="hero-chevron-right" class="w-3 h-3 ml-1" />
                    </button>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </main>
    </div>
  </div>
  <%!-- Create Modal --%>
  <%= if @show_create_modal do %>
    <div class="fixed inset-0 z-50 overflow-y-auto" role="dialog" aria-modal="true">
      <%!-- Backdrop --%>
      <div
        class="fixed inset-0 bg-black/60 transition-opacity"
        aria-hidden="true"
        phx-click="close_create_modal"
      >
      </div>
      <%!-- Modal container --%>
      <div class="flex min-h-full items-center justify-center p-4">
        <div
          class="relative w-full max-w-3xl transform overflow-hidden rounded-2xl bg-white shadow-2xl transition-all"
          phx-click-away="close_create_modal"
        >
          <%!-- Modal header --%>
          <div class="border-b border-gray-200 bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-5">
