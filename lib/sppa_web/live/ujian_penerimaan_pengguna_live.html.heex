        <div
          class="relative w-full max-w-4xl transform overflow-hidden rounded-2xl bg-white shadow-2xl transition-all"
          phx-click-away="close_edit_kes_modal"
        >
          <%!-- Modal header --%>
          <div class="border-b border-gray-200 bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-5">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-2xl font-bold text-white">Kemaskini Kes Ujian</h2>

                <p class="mt-1 text-sm text-blue-100">
                  Edit maklumat kes ujian: {@selected_kes.id}
                </p>
              </div>

              <button
                type="button"
                phx-click="close_edit_kes_modal"
                class="rounded-lg p-2 text-white/80 transition hover:bg-white/10 hover:text-white focus:outline-none focus:ring-2 focus:ring-white/50"
                aria-label="Tutup"
              >
                <.icon name="hero-x-mark" class="h-6 w-6" />
              </button>
            </div>
          </div>
          <%!-- Modal body --%>
          <div class="max-h-[calc(100vh-200px)] overflow-y-auto px-6 py-6">
            <.form
              for={@kes_form}
              phx-change="validate_kes"
              phx-submit="update_kes"
              id="edit-kes-form"
              class="space-y-6"
            >
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="md:col-span-2">
                  <.input
                    field={@kes_form[:senario]}
                    type="text"
                    label="Senario Ujian"
                    required
                    placeholder="Masukkan senario ujian"
                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 placeholder:text-gray-500 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                  />
                </div>

                <div class="md:col-span-2">
                  <.input
                    field={@kes_form[:langkah]}
                    type="textarea"
                    label="Langkah Ujian"
                    rows="4"
                    placeholder="Masukkan langkah ujian..."
                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 placeholder:text-gray-500 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 resize-none"
                  />
                </div>

                <div class="md:col-span-2">
                  <.input
                    field={@kes_form[:keputusan_dijangka]}
                    type="textarea"
                    label="Keputusan Dijangka"
                    rows="3"
                    placeholder="Masukkan keputusan dijangka..."
                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 placeholder:text-gray-500 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 resize-none"
                  />
                </div>

                <div class="md:col-span-2">
                  <.input
                    field={@kes_form[:keputusan_sebenar]}
                    type="textarea"
                    label="Keputusan Sebenar"
                    rows="3"
                    placeholder="Masukkan keputusan sebenar..."
                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 placeholder:text-gray-500 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 resize-none"
                  />
                </div>

                <div>
                  <.input
                    field={@kes_form[:hasil]}
                    type="select"
                    label="Hasil"
                    prompt="Belum Selesai"
                    options={["Lulus", "Gagal"]}
                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                  />
                </div>

                <div>
                  <.input
                    field={@kes_form[:penguji]}
                    type="text"
                    label="Di Uji Oleh"
                    placeholder="Masukkan nama penguji"
                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 placeholder:text-gray-500 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                  />
                </div>

                <div class="fieldset mb-2">
                  <label
                    for={@kes_form[:tarikh_ujian].id}
                    class="block text-sm font-medium text-gray-800 mb-1"
                  >
                    Tarikh Ujian
                  </label>
                  <div class="relative">
                    <input
                      type="date"
                      id={@kes_form[:tarikh_ujian].id}
                      name={@kes_form[:tarikh_ujian].name}
                      value={
                        Phoenix.HTML.Form.normalize_value("date", @kes_form[:tarikh_ujian].value)
                      }
                      phx-debounce="blur"
                      class="w-full px-4 py-2.5 pr-10 border border-gray-300 rounded-lg text-gray-900 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    />
                    <div
                      id={"trigger-kes-#{@kes_form[:tarikh_ujian].id}"}
                      phx-hook="DatePickerTrigger"
                      data-trigger-date-for={@kes_form[:tarikh_ujian].id}
                      class="absolute right-2 top-1/2 -translate-y-1/2 cursor-pointer rounded p-1 text-gray-500 hover:text-gray-700 hover:bg-gray-100 transition-colors"
                      role="button"
                      aria-label="Pilih tarikh"
                      tabindex="0"
                    >
                      <.icon name="hero-calendar-days" class="w-5 h-5 pointer-events-none" />
                    </div>
                  </div>

                  <%= for msg <- Enum.map(@kes_form[:tarikh_ujian].errors || [], &translate_error/1) do %>
                    <p class="mt-1.5 flex gap-2 items-center text-sm text-red-600">
                      <.icon name="hero-exclamation-circle" class="size-5 shrink-0" /> {msg}
                    </p>
                  <% end %>
                </div>

                <div>
                  <.input
                    field={@kes_form[:disahkan_oleh]}
                    type="text"
                    label="Disahkan Oleh"
                    placeholder="Masukkan nama pengesah"
                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 placeholder:text-gray-500 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                  />
                </div>

                <div class="fieldset mb-2">
                  <label
                    for={@kes_form[:tarikh_pengesahan].id}
                    class="block text-sm font-medium text-gray-800 mb-1"
                  >
                    Tarikh Pengesahan
                  </label>
                  <div class="relative">
                    <input
                      type="date"
                      id={@kes_form[:tarikh_pengesahan].id}
                      name={@kes_form[:tarikh_pengesahan].name}
                      value={
                        Phoenix.HTML.Form.normalize_value(
                          "date",
                          @kes_form[:tarikh_pengesahan].value
                        )
                      }
                      phx-debounce="blur"
                      class="w-full px-4 py-2.5 pr-10 border border-gray-300 rounded-lg text-gray-900 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    />
                    <div
                      id={"trigger-kes-#{@kes_form[:tarikh_pengesahan].id}"}
                      phx-hook="DatePickerTrigger"
                      data-trigger-date-for={@kes_form[:tarikh_pengesahan].id}
                      class="absolute right-2 top-1/2 -translate-y-1/2 cursor-pointer rounded p-1 text-gray-500 hover:text-gray-700 hover:bg-gray-100 transition-colors"
                      role="button"
                      aria-label="Pilih tarikh"
                      tabindex="0"
                    >
                      <.icon name="hero-calendar-days" class="w-5 h-5 pointer-events-none" />
                    </div>
                  </div>

                  <%= for msg <- Enum.map(@kes_form[:tarikh_pengesahan].errors || [], &translate_error/1) do %>
                    <p class="mt-1.5 flex gap-2 items-center text-sm text-red-600">
                      <.icon name="hero-exclamation-circle" class="size-5 shrink-0" /> {msg}
                    </p>
                  <% end %>
                </div>
              </div>
            </.form>
          </div>
          <%!-- Modal footer --%>
          <div class="border-t border-gray-200 bg-gray-50 px-6 py-4 flex justify-end gap-3">
            <button
              type="button"
              phx-click="close_edit_kes_modal"
              class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors duration-200 font-medium"
            >
              Batal
            </button>
            <button
              type="submit"
              form="edit-kes-form"
              class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200 font-medium"
            >
              Simpan
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</Layouts.app>
