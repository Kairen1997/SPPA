                            <div><.input field={@form[:modul_terlibat]} type="text" label="Modul Terlibat" required placeholder="Masukkan nama modul" class="w-full" /></div>
                            <div><.input field={@form[:tarikh_dibuat]} type="date" label="Tarikh Dibuat" required class="w-full" /></div>
                            <div><.input field={@form[:tarikh_dijangka_siap]} type="date" label="Tarikh Dijangka Siap" required class="w-full" /></div>
                            <div><label class="block text-sm font-medium text-gray-700 mb-2">Status</label><select name="perubahan[status]" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"><option value="Dalam Semakan">Dalam Semakan</option><option value="Diluluskan">Diluluskan</option><option value="Ditolak">Ditolak</option><option value="Dalam Pelaksanaan">Dalam Pelaksanaan</option><option value="Selesai">Selesai</option></select></div>
                            <div><label class="block text-sm font-medium text-gray-700 mb-2">Keutamaan</label><select name="perubahan[keutamaan]" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"><option value="Sangat Tinggi">Sangat Tinggi</option><option value="Tinggi">Tinggi</option><option value="Sederhana">Sederhana</option><option value="Rendah">Rendah</option></select></div>
                            <div class="md:col-span-2"><label class="block text-sm font-medium text-gray-700 mb-2">Justifikasi</label><textarea name="perubahan[justifikasi]" rows="3" placeholder="Masukkan justifikasi perubahan..." class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 resize-none"></textarea></div>
                            <div class="md:col-span-2"><label class="block text-sm font-medium text-gray-700 mb-2">Kesan</label><textarea name="perubahan[kesan]" rows="3" placeholder="Masukkan kesan perubahan..." class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 resize-none"></textarea></div>
                            <div class="md:col-span-2"><label class="block text-sm font-medium text-gray-700 mb-2">Catatan</label><textarea name="perubahan[catatan]" rows="3" placeholder="Masukkan catatan..." class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 resize-none"></textarea></div>
                          </div>
                        </.form>
                      </div>
                      <div class="border-t border-gray-200 bg-gray-50 px-6 py-4 flex justify-end gap-3">
                        <button type="button" phx-click="close_create_modal" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-medium">Batal</button>
                        <button type="submit" form="create-perubahan-form-tab" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium">Daftar Perubahan</button>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
