                <div class="fixed inset-0 z-50 overflow-y-auto" phx-click="close_create_modal" phx-click-away="close_create_modal" role="dialog" aria-modal="true">
                  <div class="fixed inset-0 bg-black/60 transition-opacity" aria-hidden="true"></div>
